<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:id="@+id/sender_message_row_firstRelativeLayout"
android:layout_width="match_parent"
android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/sender_message_row_firstRelativeLayout_paddingRight"
android:paddingTop="@dimen/activity_vertical_margin"
android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
android:background="@color/white"
android:gravity="right">



<RelativeLayout
    android:layout_width="wrap_content"
    android:minWidth="@dimen/sender_message_row_secondRelativeLayout_minWidth"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/sender_message_row_secondRelativeLayout_minHeight"
    android:background = "@color/white"
    android:layout_alignParentTop="true"
    android:layout_alignParentRight="true">


    <LinearLayout
        android:id="@+id/secondcurve"
        android:layout_width="@dimen/sender_message_row_secondcurve_width"
        android:layout_height="@dimen/sender_message_row_secondcurve_height"
        android:layout_alignRight="@+id/firstcurve"
        android:layout_marginRight="@dimen/sender_message_row_secondcurve_marginRight"
        android:layout_alignParentBottom="true"
        android:background="@drawable/sender_secondcurve"
        android:orientation="horizontal">
    </LinearLayout>


    <View
        android:id="@+id/sender_message_row_View"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_alignTop="@+id/mainblock"
        android:layout_alignRight="@+id/firstcurve"
        android:layout_marginBottom="@dimen/sender_message_row_sender_message_row_View_marginBottom">
    </View>


    <LinearLayout
        android:id="@+id/mainblock"
        android:layout_width="wrap_content"
        android:minWidth="@dimen/sender_message_row_mainblock_minWidth"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/sender_message_row_mainblock_minHeight"
        android:paddingLeft="@dimen/sender_message_row_mainblock_paddingLeft"
        android:paddingRight="@dimen/sender_message_row_mainblock_paddingRight"
        android:paddingTop="@dimen/sender_message_row_mainblock_paddingTop"
        android:paddingBottom="@dimen/sender_message_row_mainblock_paddingBottom"
        android:background="@drawable/sender_mainblock"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:maxWidth="@dimen/sender_message_row_username_maxWidth"
            android:textStyle="bold"
            android:text="k"
            android:singleLine="true"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sender_message_row_username_textSize"
            android:textColor="@color/white"
            android:layout_gravity="left"/>

        <TextView
            android:id="@+id/message_text"
            android:layout_width="wrap_content"
            android:maxWidth="@dimen/sender_message_row_message_text_maxWidth"
            android:text="k"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sender_message_row_message_text_textSize"
            android:textColor="@color/white"
            android:layout_gravity="left"/>

        <TextView
            android:id="@+id/message_time"
            android:layout_width="wrap_content"
            android:maxWidth="@dimen/sender_message_row_message_time_maxWidth"
            android:text="k"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sender_message_row_message_time_textSize"
            android:textColor="@color/white"
            android:layout_gravity="right"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/firstcurve"
        android:layout_width="@dimen/sender_message_row_firstcurve_width"
        android:layout_height="@dimen/sender_message_row_firstcurve_height"
        android:background="@drawable/firstcurve"
        android:layout_toRightOf="@+id/mainblock"
        android:layout_alignBottom="@+id/mainblock"
        android:layout_marginBottom="@dimen/sender_message_row_firstcurve_marginBottom"
        android:orientation="horizontal">

    </LinearLayout>

    <ImageView
        android:id="@+id/message_row_image"
        android:layout_width="@dimen/sender_message_row_message_row_image_width"
        android:layout_height="@dimen/sender_message_row__message_row_image_height"
        android:layout_marginLeft="@dimen/sender_message_row_message_row_image_marginLeft"

        android:layout_toRightOf="@+id/firstcurve"
        android:layout_alignParentBottom="true"
        />
    <com.iflylabs.iflychat.iflychatexamplechatview.CircularImageView
        android:id="@+id/message_row_circular_image"
        android:layout_width="@dimen/sender_message_row_message_row_image_width"
        android:layout_height="@dimen/sender_message_row__message_row_image_height"
        android:layout_marginLeft="@dimen/sender_message_row_message_row_image_marginLeft"
        android:layout_toRightOf="@+id/firstcurve"
        android:layout_alignParentBottom="true"

        />

</RelativeLayout>



</RelativeLayout>

