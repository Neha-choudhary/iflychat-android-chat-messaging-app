<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="16dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#ffffff"
    android:gravity="right">



    <RelativeLayout
        android:layout_width="wrap_content"
        android:minWidth="58dp"
        android:layout_height="wrap_content"
        android:minHeight="32dp"
        android:background = "#ffffff"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true">


        <LinearLayout
            android:id="@+id/secondcurve"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignRight="@+id/firstcurve"
            android:layout_marginRight="5dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/secondcurve"
            android:orientation="horizontal">
        </LinearLayout>


        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:layout_alignTop="@+id/mainblock"
            android:layout_alignRight="@+id/firstcurve"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="15dp">

        </View>


        <LinearLayout
            android:id="@+id/mainblock"
            android:layout_width="wrap_content"
            android:minWidth="38dp"
            android:layout_height="wrap_content"
            android:minHeight="32dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="@drawable/mainblock"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:maxWidth="200dp"
                android:textStyle="bold"

                android:text="k"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="#ffffff"
                android:layout_gravity="left"/>

            <TextView
                android:id="@+id/message_text"
                android:layout_width="wrap_content"
                android:maxWidth="200dp"

                android:text="k"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#ffffff"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/message_time"
                android:layout_width="wrap_content"
                android:maxWidth="200dp"

                android:text="k"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="#ffffff"
                android:layout_gravity="right"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/firstcurve"
            android:layout_width="20dp"
            android:layout_height="32dp"
            android:background="@drawable/firstcurve"
            android:layout_toRightOf="@+id/mainblock"
            android:layout_alignBottom="@+id/mainblock"
            android:layout_marginBottom="-2dp"
            android:orientation="horizontal">

        </LinearLayout>

        <com.iflylabs.iflychat.iflychatexamplechatview.CircularImageView
            android:id="@+id/message_row_image"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="-15dp"
            android:src="@drawable/default_avatar"
            android:layout_toRightOf="@+id/firstcurve"
            android:layout_alignParentBottom="true"
             />

    </RelativeLayout>



</RelativeLayout>
